            </column>

            <column name="project_description" type="clob">
                <constraints nullable="true" />
            </column>

            <column name="project_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="funding_basis" type="varchar(255)">
                <constraints nullable="true" />
